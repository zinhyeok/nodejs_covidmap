<body>
    <div id="navbar">myfirstmap</div>
    
    <div id="infobox">
        <div id="infotitle">현재날짜</div>
        <div id="infocontent"> 2022.2.1</div>
    </div>

    <div id="map"></div>
    
<script type="text/javascript" src="/data/data.js"></script>

<script>
var mapOptions = {
    center: new naver.maps.LatLng(37.3595704, 127.105399),
    zoom: 10
};

var map = new naver.maps.Map('map', mapOptions);
var markerList = [];
var infoWindow = [];

// marker 
for (var i in data){
    var target = data[i];
    var lating = new naver.maps.LatLng(target.lat, target.lng)
    marker = new naver.maps.Marker({
        map: map,
        position: lating,
        icon: {content : "<div class='marker'></div>",
        anchor: new naver.maps.Point(12,12) //icon 중심 좌표
    },
    });
} 
var content = `<div class='infowindow_wrap'></div>
<div class='infowindow_title'>${target.title}</div>
<div class='infowindow_content'>${target.content}</div>
<div class='infowindow_date'>${target.date}</div>`

var infowindow = new naver.maps.InfoWindow({
    content: content,
    backgroundColor: "#00ff0000",
    borderColor: "#00ff0000",
    anchorSize: new naver.maps.Size(0,0)
});
</script>
